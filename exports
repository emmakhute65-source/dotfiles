export MYSHELL=$(basename $SHELL)
export EDITOR=vim
export PAGER='less -FirSX'
export PATH=$HOME/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/local/games:/usr/games

if [ -d "$HOME/Projects/play" ]; then
  export PATH=$HOME/Projects/play:$PATH
fi

if [ -d "$HOME/.cabal/bin" ]; then
  export PATH=$HOME/.cabal/bin:$PATH
fi

if [ -d "/usr/local/plan9" ]; then
  export PLAN9="/usr/local/plan9"
  export PATH=$PATH:$PLAN9/bin
fi

# http://jeroenjanssens.com/2013/08/16/quickly-navigate-your-filesystem-from-the-command-line.html
export MARKPATH=$HOME/.marks

# Less Colors for Man Pages http://nion.modprobe.de/blog/archives/572-less-colors-for-man-pages.html
export LESS_TERMCAP_mb=$'\E[01;31m'       # begin blinking
export LESS_TERMCAP_md=$'\E[01;38;5;74m'  # begin bold
export LESS_TERMCAP_me=$'\E[0m'           # end mode
export LESS_TERMCAP_se=$'\E[0m'           # end standout-mode
export LESS_TERMCAP_so=$'\E[38;5;246m'    # begin standout-mode - info box
export LESS_TERMCAP_ue=$'\E[0m'           # end underline
export LESS_TERMCAP_us=$'\E[04;38;5;146m' # begin underline

export DROPBOX_UID=2372716

# Keychain to manage gpg-agent and ssh-agent
if command -v keychain > /dev/null 2>&1; then
  eval $(keychain --eval)
fi
